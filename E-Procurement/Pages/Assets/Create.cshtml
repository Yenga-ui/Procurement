@page
@model E_Procurement.Pages.Assets.CreateModel

@{
    ViewData["Title"] = "Create";
       Layout = "~/Pages/Shared/_metronicLayout.cshtml";
}

<div class="card o-hidden border-0 shadow-lg col-lg-12">
    <div class="card-header">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Assets</h1>
        </div>
    </div>
    <div class="card-body p-0">
        <form method="post">

            <div class="row">
                <div class="col-lg-4">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CdfAsset.Asset" class="control-label"></label>
                        <input asp-for="CdfAsset.Asset" class="form-control" />
                        <span asp-validation-for="CdfAsset.Asset" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CdfAsset.AssetType" class="control-label">Type</label>
                        <select asp-for="CdfAsset.AssetType" class="form-control" asp-items="@Model.assetType">

                            <option value="0">Asset Type</option>
                        </select>
                        <span asp-validation-for="CdfAsset.AssetType" class="text-danger"> </span>
                    </div>
                    <div class="form-group" style="display:none">
                        <label asp-for="CdfAsset.CreatedBy" class="control-label"></label>
                        <input asp-for="CdfAsset.CreatedBy" class="form-control" />
                        <span asp-validation-for="CdfAsset.CreatedBy" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
        </form>
    </div>
    </div>
  

    <div>
        <a asp-page="Index">Back to List</a>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
 

