@page
@model E_Procurement.Pages.AssetType.CreateModel

@{
    ViewData["Title"] = "Create";
        Layout = "~/Pages/Shared/_metronicLayout.cshtml";
}

<div class="card o-hidden border-0 shadow-lg col-lg-12">
    <div class="card-header">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Asset Type</h1>
        </div>
    </div>
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->

        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CdfAssetType.AssetType" class="control-label">Asset Type</label>
                        <input asp-for="CdfAssetType.AssetType" class="form-control" />
                        <span asp-validation-for="CdfAssetType.AssetType" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="display:none">
                        <label asp-for="CdfAssetType.CreatedBy" class="control-label"></label>
                        <input asp-for="CdfAssetType.CreatedBy" class="form-control" />
                        <span asp-validation-for="CdfAssetType.CreatedBy" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">Back to List</a>
        </div>
        </div>
    </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
