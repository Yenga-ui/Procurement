@page
@model E_Procurement.Pages.Roles.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card o-hidden border-0 shadow-lg col-lg-12">
    <div class="card-header">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Roles</h1>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CdfRole.Role" class="control-label"></label>
                        <input asp-for="CdfRole.Role" class="form-control" />
                        <span asp-validation-for="CdfRole.Role" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CdfRole.LevelId" class="control-label">Level</label>
                        <select asp-for="CdfRole.LevelId" class="form-control" asp-items="@Model.level" >

                            <option> --select--</option>

                            </select>
                        <span asp-validation-for="CdfRole.LevelId" class="text-danger"></span>
                    </div>
                 
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">Back to List</a>
        </div>
        </div>
    </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
