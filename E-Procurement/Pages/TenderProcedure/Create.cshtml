@page
@model E_Procurement.Pages.TenderProcedure.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card o-hidden border-0 shadow-lg col-lg-12">
    <div class="card-header">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Create Procedure</h1>
        </div>
    </div>
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->

        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CdfTenderProcedure.TenderProcedure" class="control-label">Procedure</label>
                        <input asp-for="CdfTenderProcedure.TenderProcedure" class="form-control" />
                        <span asp-validation-for="CdfTenderProcedure.TenderProcedure" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CdfTenderProcedure.NumberofBidders" class="control-label"> Number Of Bidders</label>
                        <select asp-for="CdfTenderProcedure.NumberofBidders" class="form-control">
                            <option value="1">1</option>
                            <option value="3">3</option>
                            <option value="4">Unlimited</option>
                            </select>
                        <span asp-validation-for="CdfTenderProcedure.NumberofBidders" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
    <div>
        <a asp-page="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
