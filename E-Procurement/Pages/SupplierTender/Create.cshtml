@page
@model E_Procurement.Pages.SupplierTender.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_SupplierLayout.cshtml";
}

<div class="card o-hidden border-0 shadow-lg col-lg-12">
    <div class="card-header">
        Technical Proposal
    </div>
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">

                        <textarea class="form-control" id="details" asp-for="fileUpload.details" rows="3"></textarea>
                    </div>
                    <div class="card-header">
                        <label for="exampleFormControlTextarea1" class="form-label">Supporting Documentation</label>
                        <div class="mb-3">

                            <input type="file" class="form-control-file" asp-for="fileUpload.FormFiles" multiple />
                        </div>
                    </div>
                    <div class="row" style="padding-top:30px">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input asp-for="fileUpload.tenderId" id="tenderID" hidden />
  


                            </div>
                            <div class="form-group">
                                @{
                                    if (ViewData["SuccessMessage"] != null)
                                    {
                                        <span class="badge badge-success"> @ViewData["SuccessMessage"]</span>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

      
        </div>
    </div>

<div class="card o-hidden border-0 shadow-lg col-lg-12">
    <div class="card-header">
        Financial Proposal
    </div>
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">

                        <textarea class="form-control" id="details" asp-for="fileUpload.details" rows="3"></textarea>
                    </div>
                    <div class="card-header">
                        <label for="exampleFormControlTextarea1" class="form-label">Supporting Documentation</label>
                        <div class="mb-3">

                            <input type="file" class="form-control-file" asp-for="fileUpload.FormFiles" multiple />
                        </div>
                    </div>
                    <div class="row" style="padding-top:30px">
                       
                        <div class="col-lg-10">


                            <input asp-for="fileUpload.tenderId" id="tenderID" hidden />
                            <div class="form-group">
                                @{
                                    if (ViewData["SuccessMessage"] != null)
                                    {
                                        <span class="badge badge-success"> @ViewData["SuccessMessage"]</span>
                                    }
                                }
                            </div>
                        </div>
                           

                            <div class="col-lg-2">
                                <input value="Submit Bid" asp-page-handler="Upload" class="btn btn-warning" type="submit" />
                            </div>


                           
                       
                    </div>
                </form>
            </div>
        </div>

    

    </div>
</div>
<script>

    $(document).ready(function () {
        function getUrlVars() {
            var vars = {};
            var parts = window.location.href.replace(/[?&]+([^=&]+)=([^&]*)/gi,
                function (m, key, value) {
                    vars[key] = value;
                });
            return vars;
        }
        var fType = getUrlVars()["id"];

       
        $("#tenderID").val(fType);
    });
    
</script>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
