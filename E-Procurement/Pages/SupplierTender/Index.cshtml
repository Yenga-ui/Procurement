@page
@model E_Procurement.Pages.SupplierTender.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_SupplierLayout.cshtml";
}

<div class="card o-hidden border-0 shadow-lg col-lg-12">
    <div class="card-header">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Current Tenders</h1>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>
                        @Html.DisplayNameFor(model => model.CdfTender[0].Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CdfTender[0].DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CdfTender[0].DueDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CdfTender[0].ShortDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CdfTender[0].LongDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CdfTender[0].TenderSerial)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CdfTender[0].TenderProcedure)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CdfTender[0].TenderProcurementTechnique)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CdfTender[0].SubmissionDeadline)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CdfTender[0].ClarificationDeadline)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CdfTender[0].InvitationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CdfTender[0].ContractNoticeDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CdfTender[0].EvaluationMechanism)
                    </th>
                    <th>
                        Status
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CdfTender)
                {
                <tr>
                    <td>
                        <a asp-page="./Create" asp-route-id="@item.Id">Bid</a> |
                       
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DueDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShortDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LongDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenderSerial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenderProcedure)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenderProcurementTechnique)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubmissionDeadline)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClarificationDeadline)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvitationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContractNoticeDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EvaluationMechanism)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>

                </tr>
                }
            </tbody>
        </table>
                </div>
</div>
</div>
</div>
