@page
@model E_Procurement.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card o-hidden border-0 shadow-lg col-lg-12">
    <div class="card-header">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Users</h1>
        </div>
    </div>
    <div class="card-body p-0">
        <form method="post">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="CdfUser.Username" class="control-label">Username</label>
                        <input asp-for="CdfUser.Username" class="form-control" />
                        <span asp-validation-for="CdfUser.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CdfUser.Fname" class="control-label">First Name</label>
                        <input asp-for="CdfUser.Fname" class="form-control" />
                        <span asp-validation-for="CdfUser.Fname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CdfUser.Lname" class="control-label">Last Name</label>
                        <input asp-for="CdfUser.Lname" class="form-control" />
                        <span asp-validation-for="CdfUser.Lname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-4">

                    <div class="form-group">
                        <label asp-for="CdfUser.Type" class="control-label"></label>
                        <select asp-for="CdfUser.Type" class="form-control" asp-items="@Model.usertype">

                            <option>--select--</option>
                        </select>
                        <span asp-validation-for="CdfUser.Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CdfUser.Status" class="control-label">Status</label>
                        <select asp-for="CdfUser.Status" class="form-control" asp-items="@Model.status">
                            <options>--Select--</options>

                        </select>
                        <span asp-validation-for="CdfUser.Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CdfUser.Email" class="control-label">Email</label>
                        <input asp-for="CdfUser.Email" class="form-control" />
                           

                      
                        <span asp-validation-for="CdfUser.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="display:none">
                        <label asp-for="CdfUser.CreatedBy" class="control-label"></label>
                        <input asp-for="CdfUser.CreatedBy" class="form-control" />
                        <span asp-validation-for="CdfUser.CreatedBy" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">





                    <div class="form-group">
                        <label asp-for="CdfUser.RoleId" class="control-label">Role</label>
                        <select asp-for="CdfUser.RoleId" class="form-control" asp-items="@Model.role">
                            <options>--Select--</options>

                        </select>
                        <span asp-validation-for="CdfUser.RoleId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CdfUser.DepartmentId" class="control-label">Department</label>
                        <select asp-for="CdfUser.DepartmentId" class="form-control" asp-items="@Model.department">

                            <options>--Select--</options>
                        </select>
                        <span asp-validation-for="CdfUser.DepartmentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CdfUser.Phone" class="control-label">Phone</label>
                        <input asp-for="CdfUser.Phone" class="form-control" />



                        <span asp-validation-for="CdfUser.Phone" class="text-danger"></span>
                    </div>


                </div>
                </div>
          
        </form>
        <div>
            <a asp-page="Index">Back to List</a>
        </div>

        </div>
    </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
